<!-- app/views/products/index.html.erb -->
<h1>Products List</h1>

<ul>
  <% @products.each do |product| %>
    <li>
      <strong>Title:</strong> <%= link_to product.title, product %><br>
      <strong>Description:</strong> <%= product.description %><br>
      <strong>Price:</strong> <%= number_to_currency(product.price) %><br>
      <strong>Stock Quantity:</strong> <%= product.stock_quantity %><br>

      <% if product.category %>
        <strong>Category:</strong> <%= product.category.name %><br>
      <% else %>
        <strong>Category:</strong> Not specified<br>
      <% end %>
    </li>
  <% end %>
</ul>
